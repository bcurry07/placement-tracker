extends layout

block content
    .container
        div(ng-controller='mainMenuCtrl')
            .navbar.navbar-default
                .navbar-header
                    button.btn.btn-success.navbar-toggle(data-toggle='collapse', data-target='.navbar-collapse')
                        span.glyphicon.glyphicon-chevron-down
                .navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-left
                        li#home.nav(ng-class="{active: isActive('/')}")
                            a(href='/') Placements
                        li#new.nav(ng-class="{active: isActive('/graphs')}")
                            a(href='/graphs') Graphs

    ng-view