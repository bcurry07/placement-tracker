.container

    h1 Edit Placement
    br
    form.col-md-4(name="newPlacementForm")
        .fieldset
            .form-group
                label(for="placementName") Name
                input.form-control(name="placementName", id="placementName", type="text", required, ng-model="placement.name", ng-auto-focus, placeholder="Candidate name...")
            .form-group
                label(for="placementDate") Date
                input.form-control(name="placementDate", id="placementDate", type="text", required, ng-model="placement.date", placeholder="Placement Date...", date-input)
            .form-group
                label(for="placementClient") Client
                input.form-control(auto-complete, name="placementClient", id="placementClient", type="text", required, ng-model="placement.client", placeholder="Enter Client Name...")
            .form-group
                label(for="placementOnBilling") Currently on Billing?
                select.input-sm(ng-model="placement.onBilling", id="billing")
                    option(selected, value="Yes") Yes
                    option(value="No") No
            .form-group
                label(for="placementType") Placement Type:
                select.input-sm(ng-model="placement.type", id="placementType")
                    option(selected, value="Contract") Contract
                    option(value="Perm") Perm
            .form-group
                label(for="placementNotes") Notes
                input.form-control(name="placementNotes", id="placementNotes", type="text", ng-model="placement.notes", placeholder="Enter Comments...")

        button.btn.btn-success(ng-disabled="newPlacementForm.$invalid", ng-click="updatePlacement(placement)") Update
        button.btn.btn-default.cancel_button(type="button", ng-click="cancelEdit()") Cancel