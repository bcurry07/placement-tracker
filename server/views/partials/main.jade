.row
    .col-md-3.col-md-offset-2
        button.btn.btn-info(ng-click="addNew()") Add Placement!
hr
.row
    .col-md-8.col-md-offset-2
        table.table.table-striped.table-hover
            thead
                tr
                    td Name
                    td Date
                    td Client
                    td Type
                    td On Billing
                        span.badge.btn-warning {{onBillingCount}}
                    td Notes
            tbody
                tr(ng-repeat="placement in placements" ng-click="editPlacement(placement)")
                    td {{placement.name}}
                    td {{placement.date | date : 'shortDate'}}
                    td {{placement.client}}
                    td {{placement.type}}
                    td {{placement.onBilling}}
                    td {{placement.notes}}