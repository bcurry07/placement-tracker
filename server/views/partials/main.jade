.row
    .col-md-1.col-md-offset-2
        button.btn.btn-info.pull-right(ng-click="addNew()", data-toggle="tooltip", data-placement="top", title="Add New Placement!")
            span.glyphicon.glyphicon-plus.addIcon

    .col-md-2.form-group
        .input-group
            input.form-control(type="text", placeholder="Search...", ng-model="filterText")
            span.input-group-addon.searchIcon
                span.glyphicon.glyphicon-search

hr
.row
    .col-md-8.col-md-offset-2
        table.table.table-striped.table-hover
            thead
                tr.strong.placementRow
                    td.deleteCell
                    td.placementNameColumn.cursor(ng-click="placementSortOrder='name'; reverseSort = !reverseSort") Name
                    td.cursor(ng-click="placementSortOrder='date'; reverseSort = !reverseSort") Date
                    td.cursor(ng-click="sortColumn='client'; reverseSort = !reverseSort; sortTable()") Client
                    td.cursor(ng-click="sortColumn='type'; reverseSort = !reverseSort; sortTable()") Type
                    td.cursor(ng-click="sortColumn='onBilling'; reverseSort = !reverseSort; sortTable()") On Billing
                        span.badge.btn-warning {{onBillingCount}}
                    td Notes
            tbody
                tr(ng-repeat="placement in placements | orderBy:placementSortOrder:reverseSort | filter:filterText | filter:filterClient | filter:filterOnBilling")
                    td
                        span.glyphicon.glyphicon-minus.deleteIcon.cursor(data-toggle="modal", data-target="#deleteModal", data-placement="top", title="Delete" ng-click="setPlacementToDelete(placement)")
                    td
                        span.cursor.placementName(data-toggle="tooltip", data-placement="top", title="Edit", ng-click="editPlacement(placement)") {{placement.name}}
                    td {{placement.date | dateFilter}}
                    td {{placement.client}}
                    td {{placement.type}}
                    td(ng-class="placement.onBilling")
                        span.billingIcon.cursor.glyphicon.glyphicon-ok(data-toggle="tooltip", data-placement="top", title="Change Billing Status", ng-show="placement.onBilling | onBillingIcon", ng-click="updateBilling(placement)")
                        span.billingIcon.cursor.glyphicon.glyphicon-remove(data-toggle="tooltip", data-placement="top", title="Change Billing Status", ng-hide="placement.onBilling | onBillingIcon", ng-click="updateBilling(placement)")
                    td {{placement.notes}}
    .col-md-2
        billing-by-client-panel

delete-modal



